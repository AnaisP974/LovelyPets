                                <h5 class="card-title">
                                    <%= products[i].name%>
                                </h5>
                                <p class="card-text">
                                    <%= products[i].desc%>
                                </p>
                                <div class="d-flex justify-content-around">
                                    <p><strong><%= products[i].price%> €</strong></p>
                                    <p class="text-danger"><strong>New !</strong></p>
                                </div>
                                
