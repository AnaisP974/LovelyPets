<%- include("header.ejs")%>



    <h1>
        <%= title %>
    </h1>
    <p>Welcome to <%= title %> 
    </p>







    <div class="row d-flex justify-content-center">



        <!-- exploiter les éléments du tableau dataProducts avec la boucle "for" -->
